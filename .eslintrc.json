{
  "rules": {
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "max-lines-per-function": ["error", 10],
    "no-return-assign": "off",
    "no-return-await": "off",
    "class-methods-use-this": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true,
    "cypress/globals": true

  },
  "plugins": ["cypress"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier", "eslint:recommended", "plugin:cypress/recommended"],
  "ignorePatterns": ["dist"]
}
