{
  "rules": {
    "max-depth": ["error", 1],
    "max-lines-per-function": ["error", 10],
    "max-params": ["error", 2],
    "eqeqeq": "error",
    "no-console": "warn"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/cypress/*", "**/template/*.js"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
