{
  "rules": {
    "no-undef": "off"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended", 
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ]
}
